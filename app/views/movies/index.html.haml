%h1 All Movies
= form_tag movies_path, :id => "ratings_form", :method => :get do
  Include:
  - @all_ratings.each do |rating|
    = rating
    - if((@ratings) and (@ratings.has_key?(rating)))
      = check_box_tag "ratings[#{rating}]", 1, true
    - else
      = check_box_tag "ratings[#{rating}]", 1, false
  = hidden_field_tag 'sort', "#{@sort}"     
  = submit_tag 'Refresh', :id => "ratings_submit"
%table#movies
  %thead
    %tr
      - if(@sort == "title")
        %th{:class => "hilite"}= link_to 'Movie Title', movies_path(:sort => 'title', :ratingString => "#{@ratingString}"), :id => "title_header"
      - else
        %th= link_to 'Movie Title', movies_path(:sort => 'title', :ratingString => "#{@ratingString}"), :id => "title_header"
      %th Rating
      - if(@sort == "release_date")
        %th{:class => "hilite"}= link_to 'Release Date', movies_path(:sort => 'release_date', :ratingString => "#{@ratingString}"), :id => "release_date_header"
      - else
        %th= link_to 'Release Date', movies_path(:sort => 'release_date', :ratingString => "#{@ratingString}"), :id => "release_date_header"     
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)
 
= link_to 'Add new movie', new_movie_path
